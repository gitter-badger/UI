extends template

block head
  title LymUI - Contact Page
block body
  .jumbotron
    .container
      h1 Get in touch
      p Email us or visit the office
  .container
    .row
      .col-md-12
        form
          .row
            .col-md-6
              .form-group
                label(for='name')
                  | Name
                input#name.form-control(type='text', placeholder='Enter name', required='required')
              .form-group
                label(for='Email')
                  | Email Adress
                input#email.form-control(type='text', placeholder='Enter email', required='required')
              .form-group
                label(for='subject')
                  | Subject
                select#subject.form-control(name='subject', required='required')
                  option(value='na', selected='') Choose One:
                  option(value='service') Product 1 Support
                  option(value='suggestions') Product 2 Support
                  option(value='product') General Questions
            .col-md-6
              .form-group
                label(for='name')
                  | Message
                textarea.max#message.form-control(name='message', rows='7', cols='25', required='required', placeholder='Message')
            .col-md-12
              button#btnContactUs.btn.btn-primary.pull-right(type='submit')
                | Send Message
